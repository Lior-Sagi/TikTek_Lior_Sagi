<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="#FFFFFF"
    android:layoutDirection="rtl"
    android:padding="12dp"
    android:textDirection="rtl">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="13dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toTopOf="@+id/btnEditAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvQuestionLabel"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivAnswerPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/add_new_picture" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvPageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="13dp"
        android:text="ספר:"
        android:textColor="#61707D"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintStart_toEndOf="@+id/tvPage" />

    <TextView
        android:id="@+id/tvPage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Page 42"
        android:textColor="#4361EE"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvPageLabel"
        app:layout_constraintEnd_toStartOf="@+id/tvQuestionNumber"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="76dp"
        android:background="#B1B695"
        app:layout_constraintBottom_toBottomOf="@+id/btnDeleteAnswer"
        app:layout_constraintEnd_toEndOf="@+id/tvQuestionLabel"
        app:layout_constraintStart_toStartOf="@+id/tvQuestionNumber"
        app:layout_constraintTop_toTopOf="@+id/cardViewImage" />

    <TextView
        android:id="@+id/tvQuestionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="שאלה:"
        android:textColor="#61707D"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/cardViewImage"
        app:layout_constraintStart_toEndOf="@+id/tvQuestionNumber"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/tvQuestionNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Question #14"
        android:textColor="#C08497"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvQuestionLabel"
        app:layout_constraintEnd_toStartOf="@+id/tvQuestionLabel"
        app:layout_constraintStart_toEndOf="@+id/tvPage" />

    <Button
        android:id="@+id/btnDeleteAnswer"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginBottom="40dp"
        android:text="למחוק תשובה"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvQuestionNumber" />

    <Button
        android:id="@+id/btnEditAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="12dp"
        android:text="ערוך"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>