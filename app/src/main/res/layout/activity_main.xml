<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#588E5A"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".screens.MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="133dp"
        android:layout_height="0dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="46dp"
        android:text="דף בית"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnToRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnToRegister"
        android:layout_width="101dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:text="הרשמה"
        app:layout_constraintBottom_toTopOf="@+id/btnToLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btnToLogin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="76dp"
        android:text="התחברות"
        app:layout_constraintBottom_toTopOf="@+id/btnToAddAnswer"
        app:layout_constraintEnd_toEndOf="@+id/btnToAddAnswer"
        app:layout_constraintStart_toStartOf="@+id/btnToRegister"
        app:layout_constraintTop_toBottomOf="@+id/btnToRegister" />

    <Button
        android:id="@+id/btnToAddAnswer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="16dp"
        android:text="הוספת תשובה"
        app:layout_constraintBottom_toTopOf="@+id/btnToSearch"
        app:layout_constraintEnd_toEndOf="@+id/btnToSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnToLogin" />

    <Button
        android:id="@+id/btnToSearch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="21dp"
        android:text="חיפוש תשובה"
        app:layout_constraintBottom_toTopOf="@+id/btnToAnswers"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/btnToAnswers"
        app:layout_constraintTop_toBottomOf="@+id/btnToAddAnswer" />

    <Button
        android:id="@+id/btnToAnswers"
        android:layout_width="118dp"
        android:layout_height="0dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="164dp"
        android:text="הצגת תשובות"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnToSearch" />


</androidx.constraintlayout.widget.ConstraintLayout>