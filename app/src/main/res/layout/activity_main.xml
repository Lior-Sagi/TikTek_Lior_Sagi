<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000022"
    tools:context=".screens.MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="דף בית"
        android:textColor="#B1B695"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnToRegister"
        android:layout_width="196dp"
        android:layout_height="101dp"
        android:backgroundTint="#C08497"
        android:text="הרשמה"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnToLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnToLogin"
        android:layout_width="196dp"
        android:layout_height="101dp"
        android:backgroundTint="#4361EE"
        android:text="התחברות"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnToAddAnswer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnToRegister" />

    <Button
        android:id="@+id/btnToAddAnswer"
        android:layout_width="196dp"
        android:layout_height="101dp"
        android:backgroundTint="#C08497"
        android:text="הוספת תשובה"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnToSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnToLogin" />

    <Button
        android:id="@+id/btnToSearch"
        android:layout_width="196dp"
        android:layout_height="101dp"
        android:backgroundTint="#4361EE"
        android:text="חיפוש תשובה"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnToAddAnswer" />

</androidx.constraintlayout.widget.ConstraintLayout>