<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#000022"
    android:padding="24dp"
    tools:context=".screens.Register">

    <TextView
        android:id="@+id/tvSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="32dp"
        android:text="הרשמה"
        android:textColor="#B1B695"
        android:textSize="36sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etFname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="הכנס שם פרטי"
        android:inputType="text"
        android:textDirection="rtl"
        android:padding="12dp"
        android:backgroundTint="#C08497"
        android:textColor="#FFFFFF"
        android:textColorHint="#B1B695"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/etLname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="הכנס שם משפחה"
        android:inputType="text"
        android:textDirection="rtl"
        android:padding="12dp"
        android:backgroundTint="#C08497"
        android:textColor="#FFFFFF"
        android:textColorHint="#B1B695"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="הכנס מספר טלפון"
        android:inputType="phone"
        android:gravity="end"
        android:textDirection="rtl"
        android:padding="12dp"
        android:backgroundTint="#C08497"
        android:textColor="#FFFFFF"
        android:textColorHint="#B1B695"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="הכנס כתובת מייל"
        android:inputType="textEmailAddress"
        android:textDirection="rtl"
        android:padding="12dp"
        android:backgroundTint="#C08497"
        android:textColor="#FFFFFF"
        android:textColorHint="#B1B695"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="הכנס סיסמה"
        android:inputType="textPassword"
        android:gravity="end"
        android:textDirection="rtl"
        android:padding="12dp"
        android:backgroundTint="#C08497"
        android:textColor="#FFFFFF"
        android:textColorHint="#B1B695"
        android:layout_marginBottom="32dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="הירשם"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#4361EE"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnToLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="התחבר"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#61707D"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
